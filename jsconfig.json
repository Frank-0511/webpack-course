{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es6",
    "baseUrl": ".",
    "paths": {
      "~": ["./src/*"],
      "@utils/*": ["./src/utils/*"],
      "@templates/*": ["./src/templates/*"],
      "@styles/*": ["./src/styles/*"],
      "@images/*": ["./src/assets/images/*"]
    }
  },
  "exclude": ["dist", "node_modules"]
}
